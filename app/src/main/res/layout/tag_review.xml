<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"

    android:padding="10dp">


    <CheckBox
        android:id="@+id/tag_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tagBtn"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:clickable="true"
        android:padding="5dp"
        android:text="#웃김"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tag_gamdong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tag_sgsg"
        android:layout_below="@+id/tagBtn"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/tag_one"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:checked="false"
        android:clickable="true"
        android:padding="10dp"
        android:text="#감동"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tag_sgsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_good"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/tag_with"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:clickable="true"
        android:padding="5dp"
        android:text="#시간순삭"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tag_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tag_soso"
        android:layout_below="@+id/simpleBtn"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/tag_killtime"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:clickable="true"
        android:padding="10dp"
        android:text="#또 볼래!"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tag_killtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tag_soso"
        android:layout_below="@+id/simpleBtn"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/tag_good"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:clickable="true"
        android:padding="10dp"
        android:text="#킬링타임용"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tag_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_good"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tag_soso"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:clickable="true"
        android:padding="10dp"
        android:text="#연인과 함께"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tag_nojam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_good"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:clickable="true"
        android:padding="10dp"
        android:text="#노잼"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/tag_soso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_good"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tag_nojam"
        android:background="@drawable/round"
        android:buttonTint="#FFFFFF"
        android:clickable="true"
        android:padding="10dp"
        android:text="#그럭저럭"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textviewtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_nojam"
        android:text="tagText : "
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>