<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:gravity="center|center_horizontal|left"
    android:orientation="horizontal"
    android:padding="10dp">


    <EditText
        android:id="@+id/add_textReview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textBtn"
        android:height="30dp"
        android:background="@drawable/border"
        android:editable="true"
        android:ems="10"
        android:gravity="top"
        android:hint="리뷰를 작성하세요."
        android:textSize = "18dp"
        android:inputType="textLongMessage|text"
        android:textAlignment="gravity"
/>


    <TextView
        android:id="@+id/textviewtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_textReview"
        android:text="reviewText : "
        android:textColor="@color/white"
        android:textSize="10sp" />
</FrameLayout>